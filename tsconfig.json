{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "removeComments": false,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": false,
        "declaration": true
    },
    "angularCompilerOptions": {
        "skipMetadataEmit" : true
    }
}
